<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        tools:context=".RegisterActivity">
        <LinearLayout
            android:id="@+id/register_password_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/register_password_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/delete"/>

        </LinearLayout>

        <TextView
            android:id="@+id/register_password_title"
            android:layout_width="match_parent"
            android:layout_below="@+id/register_password_top"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="FoodFinder Register"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/register_password_title"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/entered_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Please enter Email"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EAE8E8" />

            <EditText
                android:id="@+id/entered_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Please enter name"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EAE8E8" />

            <EditText
                android:id="@+id/entered_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="Please enter password"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#EAE8E8" />

            <Button
                android:id="@+id/agree_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:text="Register"
                android:textColor="#F2F3F8"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/login_agree_button"/>


        </LinearLayout>


    </RelativeLayout>

</layout>